{
  "productName": "CONFIGURED BY npm run initialize-packaging-production",
  "appId": "CONFIGURED BY npm run initialize-packaging-production",
  "asar": <%= use_asar_bool %>,
  "files": [
    "**/dist/**",
    "package.json",
    ".env",
    "!src/*",
    "!electron/*",
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/.bin",
    "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
    "!.editorconfig",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
    "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
    "!**/{appveyor.yml,.travis.yml,circle.yml}",
    "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
  ],
  "dmg": {
    "contents": [
      { "x": 130, "y": 220 },
      { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
    ]
  },
  "win": {
    "target": [
      "nsis"
    ]
  },
  "mac": {
    "hardenedRuntime": true,
    "type": "distribution",
    "entitlements": "build/entitlements.mac.plist",
    "extendInfo": {
      "NSAppTransportSecurity": {
        "NSAllowsArbitraryLoads": true
      }
    }
  },
  "linux": {
    "target": [
      "deb",
      "rpm",
      "AppImage"
    ],
    "category": "Development"
  },
  "directories": {
    "buildResources": "build/resources",
    "output": "release",
    "app": "./"
  },
  "protocols": {
    "name": "<%= name %>",
    "schemes": [
      "<%= name %>"
    ]
  },
  "publish": { "provider": "CONFIGURED BY npm run initialize-packaging-production" },
  "afterSign": "./build/helpers/notarize.js"
}
